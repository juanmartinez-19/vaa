<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewTrip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/colorAccent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <!-- Guideline para alinear valores -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-09-10"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvRequesterNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRequesterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Juan Pérez"
            app:layout_constraintTop_toTopOf="@id/tvRequesterNameLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Teléfono -->
        <TextView
            android:id="@+id/tvPassengerPhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvRequesterName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPassengerPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="+54 11 1234 5678"
            app:layout_constraintTop_toTopOf="@id/tvPassengerPhoneLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Origen -->
        <TextView
            android:id="@+id/tvOriginAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origen:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvPassengerPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvOriginAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aeropuerto Internacional de Ezeiza"
            app:layout_constraintTop_toTopOf="@id/tvOriginAddressLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Destino -->
        <TextView
            android:id="@+id/tvDestinationAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destino:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvOriginAddress"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDestinationAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="456 Elm St"
            app:layout_constraintTop_toTopOf="@id/tvDestinationAddressLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Precio -->
        <TextView
            android:id="@+id/tvPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvDestinationAddress"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$150"
            app:layout_constraintTop_toTopOf="@id/tvPriceLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Chofer -->
        <TextView
            android:id="@+id/tvDriverNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chofer:"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDriverNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pedro Gómez"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tvDriverNameLabel"
            app:layout_constraintStart_toStartOf="@id/guidelineValue"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
