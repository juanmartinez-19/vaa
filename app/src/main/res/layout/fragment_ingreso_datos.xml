<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Texto de la pregunta -->
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Viajás vos?"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Grupo de botones de opción -->
    <RadioGroup
        android:id="@+id/request_type_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rb_myself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sí" />

        <RadioButton
            android:id="@+id/rb_third_party"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:text="No. Un tercero." />
    </RadioGroup>

    <!-- Sección de datos del solicitante -->
    <TextView
        android:id="@+id/tv_solicitante_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos del solicitante"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/request_type_group"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Nombre del solicitante -->
    <EditText
        android:id="@+id/et_solicitante_nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintTop_toBottomOf="@id/tv_solicitante_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Apellido del solicitante -->
    <EditText
        android:id="@+id/et_solicitante_apellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        app:layout_constraintTop_toBottomOf="@id/et_solicitante_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Género del solicitante -->
    <EditText
        android:id="@+id/et_solicitante_genero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Género"
        app:layout_constraintTop_toBottomOf="@id/et_solicitante_apellido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Teléfono del solicitante -->
    <EditText
        android:id="@+id/et_solicitante_telefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de teléfono"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@id/et_solicitante_genero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- CUIL del solicitante -->
    <EditText
        android:id="@+id/et_solicitante_cuil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CUIL"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_solicitante_telefono"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Sección de datos del tercero -->
    <LinearLayout
        android:id="@+id/third_party_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_solicitante_cuil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Nombre del tercero -->
        <TextView
            android:id="@+id/tv_tercero_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del tercero"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Nombre del tercero -->
        <EditText
            android:id="@+id/et_tercero_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nombre" />

        <!-- Apellido del tercero -->
        <EditText
            android:id="@+id/et_tercero_apellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Apellido" />

        <!-- Género del tercero -->
        <EditText
            android:id="@+id/et_tercero_genero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Género" />

        <!-- Teléfono del tercero -->
        <EditText
            android:id="@+id/et_tercero_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Número de teléfono"
            android:inputType="phone" />

        <!-- CUIL del tercero -->
        <EditText
            android:id="@+id/et_tercero_cuil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="CUIL"
            android:inputType="number" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
